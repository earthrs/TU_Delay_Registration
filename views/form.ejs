    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <body>
        <div class="container">
                <header>
                    <img src="https://cdn.discordapp.com/attachments/647841986686091264/779335155437142026/New_Project_1_4.png" style="width: 100%;">
                    <div>
                    <form method="get" action="/menu">
                        <button class="btn firstbtn"><strong>หน้าแรก</strong></button> 
                     </form>
                     <form method="get" action="/request">
                        <button class="btn secbtn"><strong>รายการคำร้อง</strong></button> 
                     </form>
                     </div>
                     <div class="displayname"><p><%=name_en%></p></div>
                     <div class="dropdown">
                        <img src="https://cdn.discordapp.com/attachments/647841986686091264/779316689397481472/arrow.png"  width="22" height="22 ">
                    <div class="dropdown-content w3-dropdown-content w3-bar-block w3-border font" style="right:0">
                      <form action="/information">
                        <button class="w3-bar-item w3-button">ข้อมูลส่วนตัว</button>
                    </form>
                    <form action="/main">
                        <button class="w3-bar-item w3-button">ออกจากระบบ</button>
                    </form>
                    </div>
                </header>
                <section>
                  <div class="container2">
                    <form action="/attachFiles" method="post">
                      <div class="form-group">
                        <label for="">เรื่อง : </label>
                        <input name="Topic" value="จดทะเบียนล่าช้า" class="form-group" readonly>
                      </div>
                      <div class="form-group">
                        <label for="">เรียน : </label>
                        <input type="text" name="To" value="ผอ.โครงการฯ" class="form-group" readonly>
                      </div>
                      <div class="form-group">
                        <label for="">ชั้นปีที่ : </label>
                          <select name="college_year" required>
                            <option value=""></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                          </select>
                      </div>
                      <div class="form-group">
                        <label for=""><strong>ที่อยู่ที่สามารถติดต่อได้</strong></label>
                      </div>
                      <div class="form-group">
                        <label for="">บ้านเลขที่ : </label>
                        <input name="HouseNum" value="" class="form-group" size="5" required>

                        <label for="" class="form-groupLeft">แขวง/ตำบล : </label>
                        <input name="sub_district" value="" class="form-group" size="10" required>

                        <label for="" class="form-groupLeft">เขต/อำเภอ : </label>
                        <input name="district" value="" class="form-group" size="10" required>

                        <label for="" class="form-groupLeft">จังหวัด : </label>
                        <input name="province" value="" class="form-group" size="10" required>

                      </div>

                      <div class="form-group">
                        <label for="">โทรศัพท์ติดต่อนักศึกษา : </label>
                        <input name="student_phonenumber" value="" class="form-group" size="10" required>

                        <label for="">โทรศัพท์ติดต่อผู้ปกครอง : </label>
                        <input name="relative_phone_number" value="" class="form-group" size="10" required>
                      </div>
                      <div class="form-group">
                        <label for="">อาจารย์ที่ปรึกษา : </label>
                        <input name="teacher" value="" class="form-group" size="20" required>
                      </div>

                      <div class="form-group">
                        <label for=""><strong>จดทะเบียนล่าช้า/เพิ่มล่าช้า ภาคการศึกษาที่</strong></label>
                          <select name="semester" required>
                            <option value=""></option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                          </select>
                        <label for="" class="form-groupLeft">/</label>
                          <select name="era" required>
                            <option value=""></option>
                            <option value="2561">2561</option>
                            <option value="2562">2562</option>
                            <option value="2563">2563</option>
                            <option value="2564">2564</option>
                            <option value="2565">2565</option>
                            <option value="2566">2566</option>
                            <option value="2567">2567</option>
                            <option value="2568">2568</option>
                            <option value="2569">2569</option>
                            <option value="2570">2570</option>
                          </select>
                      </div>

                      <div class="form-group">
                        <label for="">รหัสวิชา : </label>
                        <input name="code" value="" class="form-group" size="10" required>

                        <label for="">ชื่อวิชา : </label>
                        <input name="subject" value="" class="form-group" size="10" required>

                        <label for="">section : </label>
                        <select name="section" required>
                          <option value=""></option>
                          <option value="650001">650001</option>
                          <option value="650002">650002</option>
                        </select>
                      </div>

                      <div class="form-group">
                        <label for=""><strong>เหตุผลที่ยื่นคำร้อง</strong></label>
                      </div>

                      <div class="form-group">
                        <textarea name="reason" value="" class="form-group" rows="8" cols="80" required></textarea>
                      </div>

                      <div class="form-group">
                        <label for="">วันที่ยื่นคำร้อง : </label>
                        <input name="date" value="" class="form-groupRight" size="3" required>
                        <input name="month" value="" class="form-groupRight" size="3" required>
                        <input name="year" value="" class="form-groupRight" size="3" required>
                      </div>
                      
                      <div class="form-group">
                        <label for="">เช่น 01/02/2563</label>
                      </div>

                      <div class="form-group">
                        <input type="button" value="ย้อนกลับ" class="unaccept form-groupLeft1" onclick="history.back()">
                        <input type="submit" class="accept form-groupLeft1" value="ถัดไป">
                      </div>
                    </form>
                      
                      
                  </div>
                  
                </section> 
        </div>
